{
  "name": "anyword",
  "version": "1.0.0",
  "description": "Providing a collection of utils to help you know the word.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "build": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write",
      "eslint --max-warnings=0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franquil/anyword.git"
  },
  "keywords": [
    "word",
    "translate",
    "translation",
    "languages",
    "dictionary",
    "spell",
    "check",
    "spell",
    "thesaurus",
    "synonym"
  ],
  "author": "Frank Q Liu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/franquil/anyword/issues"
  },
  "homepage": "https://github.com/franquil/anyword#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  }
}
